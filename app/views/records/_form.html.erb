<%= form_for(@record) do |f| %>
  <% if @record.errors.any? %>
    <div id="error_explanation">
      <h2><%= t pluralize(@record.errors.count, "error")%></h2>

      <ul>
        <% @record.errors.full_messages.each do |msg| %>
          <li><%= t msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    
  <div class="field">
    <%= f.label :desc, 'Описание' %><br>
    <%= f.text_field :desc %>
  </div>
  <div class="field">
    <%= f.label :sum, 'Сумма' %><br>
    <%= f.number_field :sum %>
  </div>
  <div class="field">
    <%= f.label :date, 'Дата' %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :kind, 'Вид' %>
    <br>
    <%= f.select :kind, ['Расход', 'Доход'] %>
  </div>
  <div class="field">
    <label for="category">Категория</label><br>
    <input value="<%= f.object.category_name %>" name="category" id="category">
  </div>
  <div class="actions">
    <%= f.submit 'Сохранить изменения' %>
  </div>
<% end %>
