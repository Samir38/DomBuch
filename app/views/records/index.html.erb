<h1>Записи</h1>
<div class="row">
  <div class="col-md-3">
    <ul class="category-list">
      <li style="margin-top: 10px">
        <a class="btn btn-primary" style="display: inline"
           href="<%= records_path %>">
          Все записи
          <i class="glyphicon glyphicon-chevron-right"></i>
        </a>
      </li>
      <% @categories.each do |category| %>
        <li>
          <a class="btn btn-primary" style="display: inline"
             href="<%= "#{records_path}?category=#{category.name}" %>">
            <%= category.name %>
            <i class="glyphicon glyphicon-chevron-right"></i>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="col-md-5">
      <a id="filter-date" class="glyphicon glyphicon-filter" style="float: right; font-size: 20pt"></a>

      <div class="input-daterange input-group" id="datepicker">
        <input type="text" class="input-sm form-control" name="start"/>
        <span class="input-group-addon">по</span>
        <input type="text" class="input-sm form-control" name="end"/>
      </div>
    </div>
    <%= link_to 'Новая запись', new_record_path, class: 'btn btn-success pull-right' %>
    <table class="table">
      <thead>
      <tr>
        <th>Описание</th>
        <th>Сумма</th>
        <th>Дата</th>
        <th>Вид</th>
        <th>Категория</th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @records.each do |record| %>
        <tr class="<%= record.kind == 'Кредит' ? 'credit' : 'debet' %>">
          <td><%= record.desc %></td>
          <td><%= record.sum %></td>
          <td><%= record.date %></td>
          <td><%= record.kind %></td>
          <td><%= record.category_name || 'Без категории' %></td>
          <td><%= link_to 'Редактировать', edit_record_path(record), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Удалить', record, method: :delete,
                          data: {confirm: 'Вы уверены?'}, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= will_paginate @records, renderer: BootstrapPagination::Rails %>
  </div>
  <div style="text-align: right" class="col-md-3 col-md-offset-9">
    Баланс:
    <div class="btn <%= @sum > 0 ? 'btn-success' : 'btn-danger' %>"><%= @sum %></div>
  </div>
</div>
