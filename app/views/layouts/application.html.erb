<!DOCTYPE html>
<html>
<head>
  <title>Uchet</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <%= link_to 'DomBuch', root_path, class: 'navbar-brand' %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="<%= records_path %>">Записи</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <a>Здравствуйте, <%= current_user.name %>!</a>
          </li>
          <li>
            <%= link_to 'Выйти', destroy_user_session_path, :method => 'delete' %>
          </li>
          <li>
            <%= link_to 'Редактировать аккаунт', edit_user_registration_path %>
          </li>
        <% else %>
          <li>
            <%= link_to 'Login', new_user_session_path %>
          </li>
          <li>
            <%= link_to 'Зарегистрироваться', new_user_registration_path %>
          </li>
        <% end %>
      </ul>
    </div>
    <!-- /.navbar-collapse -->
  </div>
  <!-- /.container-fluid -->
</nav>
<div class="container">
  <%= yield %>
</div>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
</body>
</html>
